@{
    ViewData["Title"] = "Login/Registration";
}

@model ValidateUser
<div class="content">
    <div class="left">
        <h1>Register</h1>
        <form asp-controller="Home" asp-action="Login" method="POST">
            <div class="form-group">
                <label asp-for=NewReg.FirstName></label>
                <span asp-validation-for="NewReg.FirstName" class="text-danger"></span>
                <input asp-for="NewReg.FirstName" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for=NewReg.LastName></label>
                <span asp-validation-for="NewReg.LastName" class="text-danger"></span>
                <input asp-for="NewReg.LastName" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for=NewReg.Email></label>
                <span asp-validation-for="NewReg.Email" class="text-danger"></span>
                <input asp-for="NewReg.Email" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for=NewReg.Password></label>
                <span asp-validation-for="NewReg.Password" class="text-danger"></span>
                <input asp-for="NewReg.Password" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="NewReg.ConfirmPassword"></label>
                <span asp-validation-for="NewReg.ConfirmPassword" class="text-danger"></span>
                <input asp-for="NewReg.ConfirmPassword" class="form-control">
            </div>
            <button class="btn btn-primary">Submit</button>
        </form>
    </div>
    <div class="right">
        <h1>Login</h1>
        <form asp-controller="Home" asp-action="Login" method="POST">
            <div class="form-group">
                <label asp-for=NewLog.Email></label>
                <span asp-validation-for="NewLog.Email" class="text-danger"></span>
                <input asp-for="NewLog.Email" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for=NewLog.Password></label>
                <span asp-validation-for="NewLog.Password" class="text-danger"></span>
                <input asp-for="NewLog.Password" class="form-control">
            </div>
            <button class="btn btn-primary">Login</button>
        </form>
    </div>
</div>
